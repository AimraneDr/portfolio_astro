---
import ProjectCard from "./ProjectCard.astro";

const projects = [
  {
    title: "Messaging Web App",
    description: "A comprehensive platform enabling students and teachers to exchange homework and solutions seamlessly.",
    tags: ["Laravel", "Vue.js", "MySQL"],
    image: "https://images.unsplash.com/photo-1633356122544-f134324ef6db?auto=format&fit=crop&q=80&w=800",
    link: "#",
    featured: true
  },
  {
    title: "Restaurant Management System",
    description: "Web interface for restaurant promotions mobile app with admin and staff management features.",
    tags: ["Django", "React.js", "Admin Panel"],
    image: "https://images.unsplash.com/photo-1552661552-5fefe8c9ef14?auto=format&fit=crop&q=80&w=800",
    link: "#",
    featured: false
  }
];
---

<section id="work" class="py-24 space-y-12 px-6 md:px-12 max-w-7xl mx-auto">
  <div class="flex flex-col gap-4">
    <div class="flex items-center gap-2">
      <span class="w-8 h-[1px] bg-blue-500"></span>
      <span class="text-blue-500 font-mono text-sm tracking-widest uppercase">Portfolio</span>
    </div>
    <h2 class="text-4xl md:text-5xl font-bold text-white tracking-tight">
      My Projects
    </h2>
  </div>

  <div class="space-y-12">
    {projects.map((project, index) => (
      <div class={`group flex flex-col ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'} gap-8 items-center`}>
        <!-- Image -->
        <div class="flex-1 w-full relative overflow-hidden rounded-2xl shadow-lg shadow-xl transition-transform duration-500 group-hover:shadow-2xl">
          <div class="absolute inset-0 z-10 bg-gradient-to-t from-slate-900 via-transparent to-transparent opacity-40"></div>
          <img 
            src={project.image} 
            alt={project.title} 
            class="w-full h-80 object-cover transition-transform duration-500 group-hover:scale-105"
          />
        </div>

        <!-- Content -->
        <div class="flex-1 space-y-4">
          <div>
            <h3 class="text-3xl font-bold text-white mb-3">
              {project.title}
            </h3>
            <p class="text-lg text-slate-400 leading-relaxed mb-4">
              {project.description}
            </p>
          </div>

          <!-- Tech Stack -->
          <div class="space-y-2">
            <p class="text-xs font-mono uppercase tracking-widest text-slate-500">Technologies Used</p>
            <div class="flex flex-wrap gap-2">
              {project.tags.map((tag) => (
                <span class="inline-block px-4 py-2 rounded-lg bg-blue-500/20 border border-blue-500/40 text-blue-300 text-sm font-medium transition-all duration-300 group-hover:scale-105">
                  {tag}
                </span>
              ))}
            </div>
          </div>

          <!-- View Project Button -->

        </div>
      </div>
    ))}
  </div>
</section>
