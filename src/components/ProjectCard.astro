---
interface Props {
  title: string;
  description: string;
  tags: string[];
  image: string;
  link: string;
}

const { title, description, tags, image, link } = Astro.props;
---

<a 
  href={link} 
  class="group relative flex flex-col overflow-hidden rounded-2xl border border-white/10 bg-slate-900/40 transition-all hover:shadow-xl hover:border-white/20 hover:bg-slate-900/60"
>
  <div class="relative h-64 overflow-hidden">
    <div class="absolute inset-0 z-10 bg-gradient-to-t from-slate-900 via-transparent to-transparent opacity-80"></div>
    
    <img 
      src={image} 
      alt={title} 
      class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
    />

    <div class="absolute bottom-4 left-4 z-20 flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="rounded-full bg-white/10 text-white backdrop-blur-md border border-white/10 px-3 py-1 text-xs font-medium">
          {tag}
        </span>
      ))}
    </div>
  </div>

  <div class="flex flex-1 flex-col p-6">
    <div class="flex items-center justify-between mb-2">
      <h3 class="text-xl font-bold text-white group-hover:text-blue-400 transition-colors">
        {title}
      </h3>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 -rotate-45 transition-transform group-hover:translate-x-1 group-hover:-translate-y-1 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </div>
    <p class="text-sm leading-relaxed text-slate-400">
      {description}
    </p>
  </div>
</a>