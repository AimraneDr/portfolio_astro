---
import "../styles/global.css"

interface Props { title: string; }
const { title } = Astro.props;

---
<!doctype html>
<html lang="en" class="scroll-smooth dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content="Full-stack developer building beautiful, functional digital experiences." />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Sora:wght@400;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-slate-900 text-slate-100 font-['Inter'] antialiased transition-colors duration-300">
		<!-- Background gradient -->
		<div class="fixed top-0 -z-10 h-full w-full overflow-hidden">
			<div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_10px,#1e293b,transparent)]"></div>
			<div class="absolute top-0 -right-40 w-96 h-96 bg-blue-900/20 rounded-full blur-3xl opacity-30"></div>
			<div class="absolute -bottom-40 -left-40 w-96 h-96 bg-purple-900/20 rounded-full blur-3xl opacity-20"></div>
		</div>

		<!-- Main content -->
		<main class="relative z-10">
			<slot />
		</main>
	</body>
</html>